<h3>Message form</h3>

<%= form_for [ @chat, @message ], html: {remote: true} do |f| %>
  <%= f.text_field :content, placeholder: "message...", id: "message-input-field" %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :chat_id, value: @chat.id %>

  <%= f.submit "Send" %>
<% end %>