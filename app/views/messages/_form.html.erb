<div class="message-form-container">
  <%= form_for [ @chat, @message ], html: {remote: true, id: "message-form"} do |f| %>
    <%= f.text_area :content, placeholder: "message...", id: "message-input-field" %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :chat_id, value: @chat.id %>

    <%= f.submit "Send", id: "message-send" %>
  <% end %>
</div>