<% message = locals[:message] %>

<% is_author = message.user === current_user %>

<p id="message-<%= message.id %>">
  <%= message.content %> by: 
  <%= is_author ? "Me" :message.user.username %> 
  <%= link_to "Delete", chat_message_path(@chat, message), method: :delete, remote: true, data: { confirm: 'Are you sure?' } if is_author %>
</p>