<% if user_signed_in? %>
  <div id="nav-bar">
    <div id="nav-first-div">
      <%= link_to root_path, id: "nav-logo" do %>
        <i class="fas fa-globe nav-icon"></i> Quick Chats
      <% end %>
    </div>

    <div id="nav-second-div">
      <%= link_to chats_path, class: "nav-link" do %>
        <i class="fas fa-comments nav-icon"></i> Chats
      <% end %>

      <%= link_to new_chat_path, class: "nav-link" do %>
        <i class="fas fa-comment-medical nav-icon"></i> Create
      <% end %>

      <%= link_to friends_path(current_user.id), class: "nav-link" do %>
        <i class="fas fa-users nav-icon"></i> Friends
      <% end %>

      <%= link_to friend_requests_path, class: "nav-link" do %>
        <i class="fas fa-user-plus nav-icon"></i> Friend Requests
      <% end %>
    
      <%= link_to invitations_path, class: "nav-link" do %>
        <i class="fas fa-envelope nav-icon"></i> Invites
      <% end %>

      <div class="dropdown">
        <%= user_avatar(current_user, 40, "", "nav-avatar drop-btn") %>

        <div class="drop-content">
          <%= link_to edit_user_registration_path do %>
            <i class="fas fa-cog nav-icon"></i> Settings
          <% end %>

          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt nav-icon"></i> Log out
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div>
    <%= link_to "Log in", new_session_path(resource_name) %>
    <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
<% end %>