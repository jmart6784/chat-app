<% if @friends.length === 0 %>
  <div class="no-chats-div">
    <p class="no-chats-p">No Friends</p>
  </div>
<% else %>
  <div>
    <h1 class="friends-title">Friends</h1>

    <div class="user-options-div">
      <% @friends.each do |friend| %>
        <%= render "global_partials/user_request_options", locals: {user: friend} %>
      <% end %>
    </div>
  </div>

  <%= render "global_partials/will_paginate", locals: {data: @friends, inner_window: 1, outer_window: 0, previous_label: '◀', next_label: '▶'} %>
<% end %>