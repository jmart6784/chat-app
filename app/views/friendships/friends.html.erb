<% if @friends.length === 0 %>
  <div class="no-chats-div">
    <p class="no-chats-p">No Friends</p>
  </div>
<% else %>
  <div>
    <h1 class="friends-title">Friends</h1>

    <div class="user-options-div">
      <% @friends.each do |friend| %>
        <%= render "global_partials/user_request_options", locals: {user: friend} %>
      <% end %>
    </div>
  </div>

  <div class="paginate-pages-div">
    <%= will_paginate @friends, inner_window: 1, outer_window: 0, :previous_label => '◀', :next_label => '▶' %>
  </div>
<% end %>