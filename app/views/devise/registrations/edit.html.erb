<div class="user-edit-container">
  <p class="user-edit-title">Edit Info</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "user-edit-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="user-edit-ava-field">
      <div>
        <%= user_avatar(current_user, 50, "", "user-edit-avatar") %>
      </div>

      <%= f.file_field :avatar %>
    </div>

    <div class="user-edit-double-field">
      <div class="user-edit-field">
        <%= f.label :username, class: "edit-user-label" %>
        <%= f.text_field :username, class: "edit-user-text-field" %>
      </div>

      <div class="user-edit-field">
        <%= f.label :email, class: "edit-user-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "edit-user-text-field" %>
      </div>
    </div>

    <div class="user-edit-double-field">
      <div class="user-edit-field">
        <%= f.label :first_name, class: "edit-user-label" %>
        <%= f.text_field :first_name, class: "edit-user-text-field" %>
      </div>

      <div class="user-edit-field">
        <%= f.label :last_name, class: "edit-user-label" %>
        <%= f.text_field :last_name, class: "edit-user-text-field" %>
      </div>
    </div>

    <div class="user-edit-field">
      <%= f.label :bio, class: "edit-user-label" %>
      <%= f.text_area :bio, class: "edit-user-text-area" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="user-edit-field">
      <%= f.label :password, class: "edit-user-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "edit-user-text-field" %>

      <% if @minimum_password_length %>
        <em class="edit-user-label"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="user-edit-field">
      <%= f.label :password_confirmation, class: "edit-user-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "edit-user-text-field" %>
    </div>

    <%= f.submit "Update", class: "edit-user-submit" %>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>