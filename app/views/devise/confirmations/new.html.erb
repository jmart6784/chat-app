<div class="user-edit-container">
  <p class="user-edit-title">Resend confirmation instructions</p>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "user-edit-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="user-edit-field">
      <%= f.label :email, class: "edit-user-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "edit-user-text-field", id: "email-field" %>

      <p id="email-valid-txt-1" class="validations-labels">email must be valid</p>
      <p id="email-valid-txt-2" class="validations-labels">email required</p>
    </div>

    <%= f.submit "Resend confirmation instructions", class: "edit-user-submit" %>
  <% end %>

  <%= link_to "Log in", new_session_path(resource_name), class: "sign-up-link" %>

  <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-link" %>

  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "sign-up-link" %>
</div>