<div class="user-edit-container">
  <p class="user-edit-title">Change your password</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "user-edit-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div id="edit-user-password-1" class="user-edit-field">
      <%= f.label :password, class: "edit-user-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "edit-user-text-field", id: "password-field" %>
      
      <p id="password-valid-txt-1" class="validations-labels">must be between 6-128 characters (0)</p>

      <p id="password-valid-txt-2" class="validations-labels">passwords must match</p>
    </div>

    <div id="edit-user-password-2" class="user-edit-field">
      <%= f.label :password_confirmation, class: "edit-user-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "edit-user-text-field", id: "con-password-field" %>

      <p id="con-password-valid-txt-1" class="validations-labels">must be between 6-128 characters (0)</p>

      <p id="con-password-valid-txt-2" class="validations-labels">passwords must match</p>
    </div>

    <%= f.submit "Change my password", class: "edit-user-submit" %>
  <% end %>

  <%= link_to "Log in", new_session_path(resource_name), class: "sign-up-link" %>

  <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-link" %>

  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "sign-up-link" %>
</div>