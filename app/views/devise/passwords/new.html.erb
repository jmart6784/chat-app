<div class="user-edit-container">
  <p class="user-edit-title">Forgot your password?</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "user-edit-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="user-edit-field">
      <%= f.label :email, class: "edit-user-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "edit-user-text-field", id: "email-field" %>
    </div>

    <%= f.submit "Send me reset password instructions", class: "edit-user-submit" %>
  <% end %>

  <%= link_to "Log in", new_session_path(resource_name), class: "sign-up-link" %>

  <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-link" %>

  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "sign-up-link" %>
</div>