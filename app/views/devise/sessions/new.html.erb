<div class="user-edit-container">
  <p class="user-edit-title">Log in</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "user-edit-form"}) do |f| %>
    <div class="user-edit-field">
      <%= f.label :email, class: "edit-user-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "edit-user-text-field", id: "email-field" %>
    </div>

    <div id="edit-user-password-1" class="user-edit-field">
      <%= f.label :password, class: "edit-user-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "edit-user-text-field", id: "password-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "edit-user-label" %>
        <%= f.label :remember_me, class: "edit-user-label" %>
      </div>
    <% end %>


    <%= f.submit "Log in", class: "edit-user-submit" %>
  <% end %>

  <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-link" %>

  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "sign-up-link" %>

  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "sign-up-link" %>

</div>