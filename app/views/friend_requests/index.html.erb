<% unless @requests.length === 0 %>
  <p class="friend-request-index-title">Friend requests</p>

  <div class="user-options-div">
    <% @requests.each do |request| %>
      <%= render "global_partials/user_request_options", locals: {user: request.requestor} %>
    <% end %>
  </div>
<% else %>
  <div class="no-chats-div">
    <p class="no-chats-p">No requests yet</p>
  </div>
<% end %>